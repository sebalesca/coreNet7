@model BlogCore.Models.ViewModels.ArticuloVM
@{
    ViewData["Title"] = "Crear Artículo";
}
<br />
<br />
<h3 class="text-center">Crear un Artículo</h3>
<form method="post" asp-action="Create">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-5">
                    <label class="col-6">
                        <label asp-for="Articulo.Nombre"></label>
                    </label>
                </div>
                <div class="col-7">
                    <input asp-for="Articulo.Nombre" class="form-control" placeholder="Ingrese nombre del Artículo" />
                    <span asp-validation-for="Articulo.Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-5">
                    <label class="col-6">
                        <label asp-for="Articulo.Descripcion"></label>
                    </label>
                </div>
                <div class="col-7">
                    <input asp-for="Articulo.Descripcion" class="form-control" placeholder="Ingrese la Descripcion del Artículo" />
                    <span asp-validation-for="Articulo.Descripcion" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-5">
                    <label class="col-6">
                        <label asp-for="Articulo.CategoriaId"></label>
                    </label>
                </div>
                <div class="col-7">
                   @Html.DropDownListFor(m=> m.Articulo.CategoriaId,Model.ListaCategorias,"-Por favor selccione una categoría",new {@class="form-control"})
                    
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8">
                    <partial name="_VistaCrearVolver" />
                </div>
            </div>
        </div>

    </div>
</form>