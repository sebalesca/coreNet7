@model BlogCore.Models.Categoria
@{
    ViewData["Title"] = "Editar Categoría";
}
<br />
<br />
<h3 class="text-center">Editar Categoría</h3>
<form method="post" asp-action="Edit">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-5">
                    <label class="col-6">
                        <label asp-for="Nombre"></label>
                    </label>
                </div>
                <div class="col-7">
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese nombre de Categoría" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-5">
                    <label class="col-6">
                        <label asp-for="Orden"></label>
                    </label>
                </div>
                <div class="col-7">
                    <input asp-for="Orden" class="form-control" placeholder="Ingrese Orden de Categoría" />
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                   <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Id">Actualizar</button>
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-success form-control">Volver a Lista</a>
                </div>
            </div>
        </div>

    </div>
</form>
