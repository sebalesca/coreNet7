@model BlogCore.Models.Categoria
@{
    ViewData["Title"] = "Crear Categoría";
}
<br />
<br />
<h3 class="text-center">Crear una nueva Categoría</h3>
<form method="post" asp-action="Create">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-5">
                    <label class="col-6">
                        <label asp-for="Nombre"></label>
                    </label>
                </div>
                <div class="col-7">
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese nombre de Categoría"/>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-5">
                    <label class="col-6">
                        <label asp-for="Orden"></label>
                    </label>
                </div>
                <div class="col-7">
                    <input asp-for="Orden" class="form-control" placeholder="Ingrese Orden de Categoría"/>
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8">
                    <partial name="_VistaCrearVolver" />
                </div>
            </div>
        </div>
        
    </div>
</form>